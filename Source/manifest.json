{
	"manifest_version": 2,

	"name": "Acroplace",
    "short_name": "Acroplace",
	"description": "Replaces acronyms with their real words",
	"author": "Tom Austin",
	"version": "0.15",

	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"browser_action": {
    "default_title": "Acroplace",
    "default_popup": "popup.html"
  },

	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"all_frames": true,
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	]
}
